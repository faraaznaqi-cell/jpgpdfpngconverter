RewriteEngine On

# Remove .html extension from all files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# Specific clean URL mappings
RewriteRule ^jpg-to-png-converter$ jpg-to-png.html [NC,L]
RewriteRule ^jpg-to-pdf-converter$ jpg-to-pdf.html [NC,L]
RewriteRule ^png-to-pdf-converter$ png-to-pdf.html [NC,L]
RewriteRule ^best-image-converters$ blog/best-image-converters.html [NC,L]
RewriteRule ^reduce-image-size$ blog/reduce-image-size.html [NC,L]
RewriteRule ^jpg-vs-png-vs-pdf$ blog/jpg-vs-png-vs-pdf.html [NC,L]
RewriteRule ^privacy$ privacy.html [NC,L]
RewriteRule ^affiliate$ affiliate.html [NC,L]
RewriteRule ^contact$ contact.html [NC,L]

# Redirect old .html URLs to clean URLs (301 Permanent Redirect)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ %1 [R=301,L]